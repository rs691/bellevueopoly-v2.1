rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to businesses so users can see the list
    match /businesses/{document=**} {
      allow read: if true;
      allow write: if false; // Only admins (via scripts) should write
    }
    
    // User data should be private to the user
    match /users/{userId} {
      allow read: if request.auth != null; // Allow reading for leaderboard
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Scans are write-only for users (checked by server logic usually, or just create)
    // Scans
    match /scans/{scanId} {
      allow read, write: if request.auth != null;
    }
  }
}
